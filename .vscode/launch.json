    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch cts_eprom",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/cts_eprom/cts_eprom",
            "args": ["encode", "-i:exceptions.txt", "-o:eprom.bin"],
            "stopAtEntry": false,
            "cwd": "/home/tony/Documents/projects/speech",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
    ]
}